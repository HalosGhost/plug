CC ?= clang
CFLAGS ?= -g -ggdb -O3 -fPIE -flto -fstack-protector-strong --param=ssp-buffer-size=1 -Wall -Wextra -Wpedantic -Werror -std=gnu18 -fsanitize=undefined
LDFLAGS ?= -ldl
VER = v0-`git rev-list --count HEAD`

ifneq ($(CC), tcc)
CFLAGS += -D_FORTIFY_SOURCE=2 -Wl,-z,relro,-z,now
endif

ifeq ($(CC), clang)
CFLAGS += -Weverything -fsanitize-trap=undefined -Wno-disabled-macro-expansion -Wno-reserved-id-macro 
endif

